<%= selectable_f f, :type, [],
                 { :include_blank => _('Please first select an Azure region') },
                 {
                   :label => _('vNets'),
                   :required => true,
                   :id => 'azure_rm_vnet',
                   :onchange => 'azure_rm_subnet_from_vnet();'
                 }
%>

<%= selectable_f f, :network, [],
                 { :include_blank => _('Please first select a vNet, image, and Azure region')},
                 {
                   :label => _('Azure Subnet'),
                   :required => true,
                   :id => 'azure_rm_subnet',
                   :help_inline => spinner_button_f(f, _('Load Subnets (must reopen)'), 'azure_rm_subnet_from_vnet()',
                                                    {
                                                        :id => 'load_subnets_btn',
                                                        :spinner_id => 'load_subnets_indicator',
                                                        :class => 'btn-success',
                                                        :spinner_class => 'spinner-inverse'
                                                    })
                 }
%>

<%= checkbox_f f, :bridge,
               { :label => _("Static Public IP"), :label_size => "col-md-2" },
               'true',
               'false'
%>
<%= checkbox_f f, :name,
               { :label => _("Static Private IP"), :label_size => "col-md-2" },
               'true',
               'false'
%>